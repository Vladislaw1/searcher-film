{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": [
        "/components/*"
      ],
      "@img": [
        "/img/*"
      ],
      "@context": [
        "/context/*"
      ],
      "@hooks": [
        "/hooks/*"
      ],
      "@page": [
        "/page/*"
      ],
      "@shared": [
        "/shared/*"
      ],
      "@store": [
        "/store/*"
      ],
      "@types": [
        "/types/*"
      ],
      "@ui": [
        "/ui/*"
      ],
      "@utils": [
        "/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
